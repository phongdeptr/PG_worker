<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.BookingAcceptFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:text="Pending and Accepted booking orders"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:weightSum="2">

        <CheckBox
            android:id="@+id/cbPending"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:checked="false"
            android:clickable="true"
            android:buttonTint="#FF9800"
            android:layout_height="wrap_content"
            android:text="Pending bookings" />

        <CheckBox
            android:id="@+id/cbAccepted"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:checked="false"
            android:clickable="true"
            android:buttonTint="#FF9800"
            android:layout_height="wrap_content"
            android:text="Accepted bookings" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBook"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>